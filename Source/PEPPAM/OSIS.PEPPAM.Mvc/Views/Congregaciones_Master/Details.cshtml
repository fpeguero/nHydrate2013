@section Scripts { 
	@Scripts.Render("~/bundles/jqueryval") 
    <script type="text/javascript"> 
        $(function () { 
            formUtils.setupFormActionButtons({ 
                formId: "Congregaciones_MasterForm", 
                indexPageUrl: "@Url.Action("Index")", 
                buttonsContainerSelector: ".form-commands-container" 
            }); 
             
            $('#Congregaciones_MasterTab-tabs a[data-toggle="tab"]').on('shown.bs.tab', function (e, s) { 
                var tabShown = e.target.attributes["href"].value; 

                if (tabShown == "#personasTab") { 
                    setupPersonasGrid(); 
                } 
            });             
            $("#Congregaciones_MasterTab-tabs a[data-toggle='tab']:first").tab("show"); 
        }); 

        function setupPersonasGrid() { 
            var gridId = "PersonasGrid"; 
 
			if ($("#" + gridId).data("grid-initialized")) 
				return; 
			else  
				$("#" + gridId).data("grid-initialized", "true"); 
 
            gridUtils.setupGridToolbarButtons({ 
                gridId: gridId, 
				toolbarContainerSelector: "#personasTab", 
                reportUrl: "@Url.Action("ReportPersonas", "Congregaciones_Master", new {masterId = Model.Congregacion_Secuencia})" 
            }); 
 
            $("#" + gridId).dataTable({ 
                "aoColumns": [ 
                @Html.Raw(uiObject.GetGridColumnsArray("Personas_Master"))
                ], 
                "aaSorting": [[1, "asc"]], 
                 
                "oLanguage": datatables_locale, 
                "bFilter": false, /* Disable filtering */ 
                "bSort": false, /* Disable sorting */ 
                "bProcessing": true, 
				 
                "bServerSide": true, 
                "sAjaxSource": "@Url.Action("LoadPersonas")", 
                "sServerMethod": "POST", 
                "fnServerParams": function(aoData) { 
                    aoData.push({ "name": "masterId", "value": "@Model.Congregacion_Secuencia" }); 
                } 
            }); 
		} 

</script> 
