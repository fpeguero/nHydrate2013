@{
    @model IEnumerable<Proc_Mis_Turnos_PredicacionModel>
}
@{
 var dictinary = new Dictionary<int, int>();
    dictinary.Add(3, 121);
}
<style>
    .bs-example {
        position: relative;
        padding: 45px 15px 15px;
        margin: 2 -15px 15px;
        background-color: #fafafa;
        box-shadow: inset 0 3px 6px rgba(0,0,0,.05);
        border-color: #e5e5e5 #eee #eee;
        border-style: solid;
        border-width: 1px 0;
        width: 80%;
    }

        .bs-example:after {
            content: "Turnos";
            position: absolute;
            top: 15px;
            left: 15px;
            font-size: 12px;
            font-weight: 700;
            color: #bbb;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

    .highlight:after {
        position: absolute;
        top: 15px;
        left: 15px;
        font-size: 12px;
        font-weight: 700;
        color: #bbb;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .bs-example + .highlight {
        margin: -15px -15px 15px;
        border-radius: 0;
        border-width: 0 0 1px;
    }

    .highlight {
        padding: 15px 14px;
        margin-bottom: 14px;
        background-color: #f7f7f9;
        border: 1px solid #e1e1e8;
        border-radius: 4px;
        width: 81%;
    }
</style>


<div id="wrapper-content" class="content">
    @Html.Partial("_Funcionalidades", dictinary)


    <div id="opt-schedule">
        @foreach (var turno in Model)
    {
            <div class="bs-example">
                <dl class="dl-horizontal">
                    <dt>Puesto</dt>
                    <dd>@turno.Ruta_Descripcion</dd>
                    <dt>Turno</dt>
                    <dd>@turno.Turno_Descripcion</dd>
                    <dt>Fecha</dt>
                    <dd>@turno.Turno_Fecha.Value.ToString("D", new System.Globalization.CultureInfo("es-DO"))</dd>
                    <dt>Hora</dt>
                    <dd>@turno.Turno_Hora_Desde  - @turno.Turno_Hora_Hasta </dd>
                </dl>
            </div>

            <div class="highlight">
                <ul>

                    @{
                    Proc_Mis_Turnos_PredicacionModel turno1 = turno;
                    }
                    @foreach (var personasTurnosTransModel in Personas_Turnos_TransModel.Loadhorariodia(turno.Horario_Turno_Secuencia.Value, turno.Dia_Secuencia.Value).Where( x => x.Persona_Secuencia != turno1.Persona_Secuencia))
                    {
                        <li>@personasTurnosTransModel.Persona.Persona_Nombres  @personasTurnosTransModel.Persona.Persona_Nombres (@personasTurnosTransModel.Persona.Congregacion.Congregacion_Nombre) </li>
                    }
                </ul>
            </div>
    }
    </div>
</div>