<table style="background-color: #FFF; border: 1px solid #d4d4d4; border-collapse: collapse; box-shadow: 1px 1px 3px #d1d1d1; font-size: 14px; margin: 30px auto 0; max-width: 700px; min-width: 320px;">
        <tr>
            <td style="padding: 20px;">
                <h2 style="color: #339AB4; margin: 0 0 40px 0; border-bottom: 1px dotted #e0e0e0; padding-bottom: 20px; text-align: center; text-transform: uppercase"> @Html.Raw(ViewBag.Titulo)</h2>
                <h3 style="margin: 0 0 10px">@Html.Raw(ViewBag.SubTitulo)</h3>
                <p style="margin-top: 0">@Html.Raw(ViewBag.Cuerpo)</p>
                <div style="font-size: 16px; margin: 30px 0 0; text-align: right; text-transform: uppercase"><h4 style="margin: 0; font-style: italic;">- peppam -</h4></div>
            </td>
        </tr>
    </table>