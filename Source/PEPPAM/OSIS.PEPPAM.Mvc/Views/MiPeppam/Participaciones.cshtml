@{
   @model System.Collections.Generic.List<OSIS.PEPPAM.Mvc.Models.Proc_Persona_ParticipacionModel>
}

@using Mvc.Core.UI
@using OSIS.PEPPAM.Mvc.UI

@{
    IFuncionality uiObject = new Funcionality().GetFuncionality("MI_PEPPAM_PARTICIPACIONES");

    ViewBag.Title = Resources.Shared.AppName + " - " + uiObject.Name;
    var dictinary = new Dictionary<int, int>();
    dictinary.Add(2, 118);
}
@Html.Partial("_Funcionalidades", dictinary)

<div class="form">
    <h2>@uiObject.Name</h2>
    <h5>@uiObject.Description</h5>
    <hr />
    <div class="row">
        <div class="col-xs-12">
            <table id="TableGrid" width="100%" class="table table-striped table-bordered"></table>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
  

    <script type="text/javascript">
        $(function() {
            

            setupContacto_InformacionesGrid();
        });

        var Contacto_InformacionesGrid;
            function setupContacto_InformacionesGrid() {
                var gridId = "TableGrid";

                if ($("#" + gridId).data("grid-initialized")) {
                    Contacto_InformacionesGrid.fnClearTable();
                    return;
                } else
                    $("#" + gridId).data("grid-initialized", "true");


                gridUtils.setupGridRowButtons({
                    gridId: gridId
                });

                Contacto_InformacionesGrid = $("#" + gridId).dataTable({
                    "aoColumns": [
                        @Html.Raw(uiObject.GetGridColumnsArray("Proc_Persona_Participacion"))
                        
                    ],
                    "aaSorting": [[1, "asc"]],
                    //
                    "oLanguage": datatables_locale,
                    "bFilter": false, /* Disable filtering */
                    "bSort": false, /* Disable sorting */
                    "bProcessing": true,
                    "bServerSide": true,
                    "sAjaxSource": "@Url.Action("MisHistorialParticipacionGrid")",
                    "sServerMethod": "POST",

                });
            }

        
    </script>




}




