                    setupHorarios_MasterGrid(); 
                } 
            });             
            $("#Rutas_MasterTab-tabs a[data-toggle='tab']:first").tab("show"); 
        }); 

        function setupHorarios_MasterGrid() { 
            var gridId = "Horarios_MasterGrid"; 
 
			if ($("#" + gridId).data("grid-initialized")) 
				return; 
			else  
				$("#" + gridId).data("grid-initialized", "true"); 
 
            gridUtils.setupGridToolbarButtons({ 
                gridId: gridId, 
				toolbarContainerSelector: "#horarios_MasterTab", 
                reportUrl: "@Url.Action("ReportHorarios_Master", "Rutas_Master", new {masterId = Model.Ruta_Secuencia})" 
            }); 
 
            $("#" + gridId).dataTable({ 
                "aoColumns": [ 
                @Html.Raw(uiObject.GetGridColumnsArray("Horarios_Master"))
                ], 
                "aaSorting": [[1, "asc"]], 
                 
                "oLanguage": datatables_locale, 
                "bFilter": false, /* Disable filtering */ 
