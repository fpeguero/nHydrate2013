<script type="text/javascript">

    $(document).ready(function() {
        LoadHorarios();
        LoadTurnos();


        $("#Ruta_Secuencia").change(function() {
            LoadHorarios();
        });


        $("#Horario_Secuencia").change(function () {
            LoadTurnos();
        });

    });

    function LoadHorarios() {
        $("#Horario_Secuencia").empty();
        $("#Horario_Secuencia").append('<option value="">' + 'Seleccione Uno' + '</option>');

            $.ajax({
                url: '@Url.Action("LoadHorarios", "Personas_Master")',
                data: { rutaSecuencia: $("#Ruta_Secuencia").val() },
                success:
                    function (datas, textStatus, XMLHttpRequest) {
                        $.each(datas, function (i, data) {
                            $("#Horario_Secuencia").append('<option value="' + data.Value + '">' + data.Text + '</option>');
                        });
                    },
                error:
                    function (jqXHR, textStatus, errorThrown) {
                        formUtils.showMessage(jqXHR.responseText);
                    }
            });
        }

    function LoadTurnos() {
        $("#EntityKey").empty();
        $("#EntityKey").append('<option value="">' + 'Seleccione Uno' + '</option>');

        $.ajax({
            url: '@Url.Action("LoadHorarioTurnos", "Personas_Master")',
            data: { hId: $("#Horario_Secuencia").val() },
            success:
                function (datas, textStatus, XMLHttpRequest) {
                    $.each(datas, function (i, data) {
                        $("#EntityKey").append('<option value="' + '@Model.Persona_Secuencia' + '|' + data.Horario_Turno_Secuencia + '|' + data.Dia_Secuencia + '">' + data.Turnos + '</option>');
                    });
                },
            error:
                function (jqXHR, textStatus, errorThrown) {
                    formUtils.showMessage(jqXHR.responseText);
                }
        });
    }
    
</script>




